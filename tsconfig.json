{
  "compilerOptions": {
    // Default
    "target": "ES5",
    "noImplicitAny": true,
    "lib": ["ES2015", "DOM"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    // Added
    "jsx": "react",
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true
  },
  "exclude": [
    "**/coverage/*",
    "**/node_modules/*",
    "**/dist/*",
    "**/*.d.ts",
    "**/*.test.ts",
    "jest.config.ts"
  ]
}
